{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "paths": {
      "@/ui/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "outDir": "dist"
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src", "package.json"],
  "exclude": ["node_modules"]
}
